<%- include("partials/header", {authentication:authentication}); -%>

<h1>Compose</h1>
<form action="/compose" method="post">
    <div class="mb-3">
        <label for="title" class="form-label">Title</label>
        <input id="title" class="form-control" type="text" name="postTitle">
    </div>
    <div class="mb-3">
        <label for="blog" class="form-label">Post</label>
        <textarea id="blog" name="postBody" id="" cols="40" rows="5" class="form-control"></textarea>
    </div>
    <button class="btn btn-primary compose-button" type="submit" name="button">Publish</button>
</form>

<%- include("partials/footer"); -%>